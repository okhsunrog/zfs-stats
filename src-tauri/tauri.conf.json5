{
  // JSON5 config for Tauri (comments allowed)
  productName: "ZFS Statistics Dashboard",
  version: "0.1.0",
  identifier: "dev.okhsunrog.zfs-stats",

  build: {
    // Dev config
    beforeDevCommand: "bun run dev",
    devUrl: "http://localhost:1420",

    // Build config
    beforeBuildCommand: "bun run build",
    frontendDist: "../dist",
  },

  app: {
    windows: [
      {
        title: "ZFS Statistics Dashboard",
        width: 1050,
        height: 820,
        resizable: true,
        fullscreen: false,
      },
    ],
    security: {
      csp: null,
    },
  },

  bundle: {
    active: true,
    targets: "nsis",

    icon: [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png",
      "icons/icon.svg",
      "icons/Square30x30Logo.png",
      "icons/Square44x44Logo.png",
      "icons/Square71x71Logo.png",
      "icons/Square89x89Logo.png",
      "icons/Square107x107Logo.png",
      "icons/Square142x142Logo.png",
      "icons/Square150x150Logo.png",
      "icons/Square284x284Logo.png",
      "icons/Square310x310Logo.png",
      "icons/StoreLogo.png",
    ],
  },
}
